model Table {
    id        String   @id @default(uuid())
    number    Int      @unique
    seats     Seat[]
    guests    Guest[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    //   lunches  Lunch[]
    @@map("Tables")
}

model Seat {
    id      String @id @default(uuid())
    number  Int    @unique
    status  String
    table   Table  @relation(fields: [tableId], references: [id])
    tableId String
    guest   Guest  @relation(fields: [guestId], references: [id])
    guestId String @unique

    //   lunch    Lunch?  // Optional, as a seat might not be occupied by a lunch
    @@map("Seats")
}

model Guest {
    id        String   @id @default(uuid())
    name      String   @unique
    tableId   String?
    table     Table?   @relation(fields: [tableId], references: [id])
    seat      Seat?
    arrived   Boolean  @default(false)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    //   lunches  Lunch[]
    @@map("Guests")
}
